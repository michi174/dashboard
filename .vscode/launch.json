    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Edge",
            "port": 9222,
            "request": "attach",
            "type": "pwa-msedge",
            "url": "http://dashboard.localhost",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "edge",
            "request": "launch",
            "name": "Edge mit \"localhost\" starten",
            "url": "http://dashboard.localhost",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Microsoft Edge and open the Elements tool",
            "request": "launch",
            "type": "vscode-edge-devtools.debug",
            "url": "http://dashboard.localhost",
            "webRoot": "${workspaceFolder}"
        }
    ]
}
